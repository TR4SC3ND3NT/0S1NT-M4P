generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum EntityType {
  PERSON
  LOCATION
  DOMAIN
}

model User {
  id           Int                  @id @default(autoincrement())
  email        String               @unique
  password     String
  createdAt    DateTime             @default(now())
  updatedAt    DateTime             @updatedAt
  resetTokens  PasswordResetToken[]
}

model Entity {
  id          Int      @id @default(autoincrement())
  type        EntityType
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  linksFrom   Link[]   @relation("LinksFrom")
  linksTo     Link[]   @relation("LinksTo")
}

model Link {
  id        Int      @id @default(autoincrement())
  fromId    Int
  toId      Int
  type      String
  createdAt DateTime @default(now())
  from      Entity   @relation("LinksFrom", fields: [fromId], references: [id])
  to        Entity   @relation("LinksTo", fields: [toId], references: [id])
}

model PasswordResetToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  userId    Int
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id])
}
